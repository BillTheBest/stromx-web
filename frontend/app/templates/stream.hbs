<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="http://www.stromx.org">
        <img alt="stromx-logo" src="assets/logo.png">
      </a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="#">Files</a></li>
      </ul>
      
      <form class="navbar-form navbar-left">
        <button {{action "save"}} class="btn btn-default">
          <span class="glyphicon glyphicon-save" aria-hidden="true"></span>
          Save
        </button>
        {{#if model.active}}
          {{#if model.paused}}
            <button {{action "resume"}} class="btn btn-default">
              <span class="glyphicon glyphicon-play" aria-hidden="true"></span>
              Resume
            </button>
          {{else}}
            <button {{action "pause"}} class="btn btn-default">
              <span class="glyphicon glyphicon-pause" aria-hidden="true"></span>
              Pause
            </button>
          {{/if}}
          <button {{action "stop"}} class="btn btn-default">
            <span class="glyphicon glyphicon-stop" aria-hidden="true"></span>
            Stop
          </button>
        {{else}}
          <button {{action "start"}} class="btn btn-default">
            <span class="glyphicon glyphicon-play" aria-hidden="true"></span>
            Start
          </button>
          {{#link-to "stream.close" class="btn btn-default stromx-close-stream"}}
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Close
          {{/link-to}}
        {{/if}}
      </form>
      
      <p class="navbar-text navbar-right"><a href="auth/logout" class="navbar-link">Log out</a></p>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="row">
  <div class="col-sm-4">
    <div class="panel panel-default">
      <div class="panel-body">
        {{outlet}}
      </div>
    </div>
  </div>

  <div class="col-sm-8">
    <ul class="nav nav-tabs stromx-nav-tabs">
      <li {{bind-attr class="isVisible:active"}} role="presentation">{{#link-to (query-params view='null')}}Stream{{/link-to}}</li>
      {{#each view in model.views itemController="view"}}
        <li {{bind-attr class="view.isVisible:active"}} role="presentation">
          {{#link-to (query-params view=view.model.id)}}
            {{view.model.name}}
          {{/link-to}}
        </li>
      {{/each}}
      <div class="pull-right stromx-nav-div">
      {{#link-to "views.new" id="new-view"}}New view{{/link-to}}
      </div>
    </ul>
    
    {{#if isVisible}}
      {{render "stream-details" model}}
    {{else}}
      {{render "view-details" viewModel}}
    {{/if}}
    {{outlet "display"}}
  </div>
</div>





