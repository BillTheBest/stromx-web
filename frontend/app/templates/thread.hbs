{{outlet}}

<table class="table">
  <tbody>
    <tr>
      <td>
        {{#unless isEditing}}
          {{name}}
          <span class="stromx-color"></span>
          <div class="stromx-buttons">
            <a {{action "edit"}}>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
          </div>
        {{else}}
          <form class="form-inline">
            {{input value=name class="form-control"}}
            <div class="btn-group">
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                Color <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><a {{action "setColor" "RED"}}>Red</a></li>
                <li><a {{action "setColor" "GREEN"}}>Green</a></li>
                <li><a {{action "setColor" "BLUE"}}>Blue</a></li>
              </ul>
            </div>
            <div class="stromx-buttons">
              <button {{action "discardChanges"}} class="btn btn-default">Cancel</button>
              <button {{action "saveChanges"}} class="btn btn-primary">Save</button>
            </div>
          </form>
        {{/unless}}
      </td>
    </tr>
  </tbody>
</table>
