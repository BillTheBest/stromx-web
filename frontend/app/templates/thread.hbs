<ol class="breadcrumb">
  <li>{{#link-to "stream" stream}}{{model.stream.file.name}}{{/link-to}}</li>
  <li>{{model.name}}</li>
</ol>

<h3>
  Thread
  {{#link-to "thread.delete"}}
    <span class="glyphicon glyphicon-trash pull-right stromx-link-icon" aria-hidden="true"></span>
  {{/link-to}}
</h3>

<table class="table">
  <tbody>
    <tr>
      <td>
        <header class="stromx-cell-title">Name</header>
        {{#unless isEditingName}}
          {{model.name}}
          <a {{action "editName"}}>
            <span class="glyphicon glyphicon-pencil pull-right" aria-hidden="true"></span>
          </a>
        {{else}}
          <form class="form-inline">
            <div class="form-group">
              <label class="sr-only" for="thread-name">Name</label>
              {{input value=model.name class="form-control" id="thread-name"}}
            </div>
            <div class="form-group">
              <button {{action "discardChanges"}} class="btn btn-default">Cancel</button>
              <button {{action "saveChanges"}} class="btn btn-primary">Save</button>
            </div>
          </form>
        {{/unless}}
      </td>
    </tr>
    <tr>
      <td>
        <header class="stromx-cell-title">Color</header>
        {{#color-box color=model.color}}{{/color-box}}
        {{#unless isEditingColor}}
          <a {{action "editColor"}}>
            <span class="glyphicon glyphicon-pencil pull-right" aria-hidden="true"></span>
          </a>
        {{else}}
          <form class="form-inline">
            {{#color-chooser choose="setColor"}}{{/color-chooser}}
            <div class="form-group">
              <button {{action "discardChanges"}} class="btn btn-default">Cancel</button>
              <button {{action "saveChanges"}} class="btn btn-primary">Save</button>
            </div>
          </form>
        {{/unless}}
      </td>
    </tr>
  </tbody>
</table>

{{outlet}}
