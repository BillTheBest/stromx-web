<ol class="breadcrumb">
  <li>{{#link-to "stream" model.stream}}{{model.stream.file.name}}{{/link-to}}</li>
  <li>{{model.name}}</li>
</ol>

<h3>
  View
  {{#link-to "view.delete"}}
    <span class="glyphicon glyphicon-trash pull-right stromx-link-icon" aria-hidden="true"></span>
  {{/link-to}}
</h3>

<table class="table">
  <tbody>
    <tr>
      <td>
        <header class="stromx-cell-title">Name</header>
        {{#unless isEditingName}}
          <span class="stromx-view-name">{{model.name}}</span>
          <a {{action "editName"}} class="stromx-rename-view">
            <span class="glyphicon glyphicon-pencil pull-right" aria-hidden="true"></span>
          </a>
        {{else}}
          <form class="form-inline">
            <div class="form-group">
              <label class="sr-only" for="stromx-view-name-input">Name</label>
              {{input value=model.name class="form-control" id="stromx-view-name-input"}}
            </div>
            <div class="form-group">
              <button {{action "discardChanges"}} class="btn btn-default stromx-cancel">Cancel</button>
              <button {{action "saveChanges"}} class="btn btn-primary stromx-save">Save</button>
            </div>
          </form>
        {{/unless}}
      </td>
    </tr>
  </tbody>
</table>

{{#if hasObservers}}
  <table class="table">
    <thead>
      <tr>
        <th>
          Observers
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each observer in sortedObservers itemController="observer"}}
        <tr class="stromx-observer-row">
          <td>
            {{#if observer.isInputObserver}}
              <header class="stromx-cell-title">Input observer</header>
              {{#link-to "inputObserver" observer.model}}{{observer.model.title}}{{/link-to}}
            {{else if observer.isOutputObserver}}
              <header class="stromx-cell-title">Output observer</header>
              {{#link-to "outputObserver" observer.model}}{{observer.model.title}}{{/link-to}}
            {{else if observer.isParameterObserver}}
              <header class="stromx-cell-title">Parameter observer</header>
              {{#link-to "parameterObserver" observer.model}}{{observer.model.title}}{{/link-to}}
            {{/if}}
            <a {{action "moveUp"}}>
              <span class="glyphicon glyphicon-arrow-up pull-right stromx-margin-left stromx-move-up" aria-hidden="true"></span>
            </a>
            <a {{action "moveDown"}}>
              <span class="glyphicon glyphicon-arrow-down pull-right stromx-move-down" aria-hidden="true"></span>
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{/if}}

{{outlet}}
