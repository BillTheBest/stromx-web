<div class="container">
  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
      {{outlet}}
      {{outlet modal}}
    </div>
    <div class="col-sm-2"></div>
  </div>

  {{#if length}}
  <div class="well">
    {{#each itemController="error"}}
      <p>{{time}}: {{description}}</p>
    {{/each}}
  </div>
  <button {{action "clearErrors"}} class="btn btn-default btn-xs pull-left">Clear Errors</button>
  {{/if}}
</div>

{{outlet context}}