<div class="stromx-center-buttons">
  <div class="btn-group">
    {{#link-to 'operators.new' type="button" class="btn btn-default stromx-new-operator"}}New Operator{{/link-to}}
    {{#link-to 'stream.newThread' type="button" class="btn btn-default"}}New Thread{{/link-to}}
    {{#link-to 'stream.newView' type="button" class="btn btn-default"}}New View{{/link-to}}
  </div>
</div>

<div class="stromx-stream-view panel panel-default">
  <svg width="1280" height="1024" class="stromx-stream-svg" viewBox="0 0 1280 1024">
    <defs>
      <g id="arrows" transform="scale(5)" class="stromx-svg-arrows">
        <path d="M-1.5,0L-2.0,-1.0L-1.0,-1.0L-0.5,0.0L-1.0,1.0L-2.0,1.0Z"/>
        <path d="M0.5,0L0.0,-1.0L1.0,-1.0L1.5,0.0L1.0,1.0L0.0,1.0Z"/>
      </g>
      <pattern id="grid" width="25" height="25" patternUnits="userSpaceOnUse">
        <path d="M25,0L25,25L0,25" class="stromx-svg-grid"/>
      </pattern>
    </defs>
    <rect width="100%" height="100%" {{bind-attr fill=patternUri}}/>
    {{#each op in operators itemController="operator-svg"}}
      {{#svg-transform transform=op.transform}}
        {{#svg-drag dragStart="dragStart" dragMove="dragMove" dragEnd="dragEnd"}}
          <rect width=50 height=50 rx=5 ry=5 class="stromx-svg-operator-rect"/>
        {{/svg-drag}}
        {{#svg-click mouseClick="showMenu"}}
          <text x="25" y="65" class="stromx-svg-operator-name">{{op.name}}</text>
        {{/svg-click}}
        {{#each input in op.inputs itemController="input-svg"}}
          {{#svg-drag dragStart="dragStart" dragMove="dragMove" dragEnd="dragEnd" enter="enter" leave="leave"}}
            <rect {{bind-attr x=input.x}} {{bind-attr y=input.y}} width=10 height=10 class="stromx-svg-connector-rect"/>
          {{/svg-drag}}
          {{#if input.isDraggingConnection}}
            <line {{bind-attr x1=input.x1}} {{bind-attr y1=input.y1}} {{bind-attr x2=input.x2}} {{bind-attr y2=input.y2}} {{bind-attr stroke-width=input.strokeWidth}} class="stromx-svg-drag-line"/>
          {{/if}}
        {{/each}}
        {{#each output in op.outputs itemController="output-svg"}}
          {{#svg-drag dragStart="dragStart" dragMove="dragMove" dragEnd="dragEnd" enter="enter" leave="leave"}}
            <rect {{bind-attr x=output.x}} {{bind-attr y=output.y}} width=10 height=10 class="stromx-svg-connector-rect"/>
          {{/svg-drag}}
          {{#if output.isDraggingConnection}}
            <line {{bind-attr x1=output.x1}} {{bind-attr y1=output.y1}} {{bind-attr x2=output.x2}} {{bind-attr y2=output.y2}} {{bind-attr stroke-width=output.strokeWidth}} class="stromx-svg-drag-line"/>
          {{/if}}
        {{/each}}
      {{/svg-transform}}
    {{/each}}

    {{#each connection in connections itemController="connection-svg"}}
      {{#svg-click mouseClick="showMenu"}}
        <path {{bind-attr d=connection.path}} {{bind-attr stroke=connection.color}} class="stromx-svg-connection-path"/>
        {{#if connection.displayStartArrow}}
          <use id="startArrows" {{bind-attr xlink:href=this.arrowsUri}} {{bind-attr transform=connection.startArrowTransform}}/>
        {{/if}}
        {{#if connection.displayCenterArrow}}
          <use id="centerArrows" {{bind-attr xlink:href=this.arrowsUri}} {{bind-attr transform=connection.centerArrowTransform}}/>
        {{/if}}
        {{#if connection.displayEndArrow}}
          <use id="endArrows" {{bind-attr xlink:href=this.arrowsUri}} {{bind-attr transform=connection.endArrowTransform}}/>
        {{/if}}
      {{/svg-click}}
    {{/each}}
  </svg>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Threads</th>
    </tr>
  </thead>
  <tbody>
    {{#each thread in threads itemController="thread"}}
      <tr>
        <td>
          {{#link-to "thread" this}}{{thread.name}}{{/link-to}}
        </td>
      </tr>
    </tr>
    {{/each}}
  </tbody>
</table>

<table class="table">
  <thead>
    <tr>
      <th>Views</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each view in views itemController="view"}}
      <tr>
        <td>
          {{#if view.isEditingName}}
            {{input value=view.name}}
          {{else}}
            <a {{action "showView" view}}>{{view.name}}</a>
          {{/if}}
        </td>
        <td>
          {{#if view.isEditingName}}
            <button type="button" {{action "saveName"}} class="btn btn-default btn-xs">Save</button>
          {{else}}
            <div class="btn-group">
              <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                Action <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li>{{#link-to "view" view}}Show{{/link-to}}</li>
                <li><a {{action "rename"}}>Rename</a></li>
                <li><a {{action "showModal" "removeView" view}}>Remove</a></li>
              </ul>
            </div>
          {{/if}}
        </td>
      </tr>
    </tr>
    {{/each}}
  </tbody>
</table>
