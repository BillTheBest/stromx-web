<div class="btn-group stromx-margin-top" role="group">
  {{#link-to "operators.new" class="btn btn-default" id="new-operator"}}New operator{{/link-to}}
</div>
    
<div class="stromx-stream-view stromx-margin-top panel panel-default">
  <form class="form-inline stromx-svg-buttons">
    <div class="btn-group" role="group">
      <a {{action "minify"}} class="btn btn-default stromx-zoom-out">-</a>
      <a {{action "reset"}} class="btn btn-default stromx-reset-zoom">100%</a>
      <a {{action "magnify"}} class="btn btn-default stromx-zoom-in">+</a>
    </div>
  </form>
  <svg width={{width}} height={{height}} viewBox="0 0 1280 1024" class="stromx-stream-svg" id="stromx-stream-svg-id">
    <defs>
      <g id="arrows" transform="scale(5)" class="stromx-svg-arrows">
        <path d="M-1.5,0L-2.0,-1.0L-1.0,-1.0L-0.5,0.0L-1.0,1.0L-2.0,1.0Z"/>
        <path d="M0.5,0L0.0,-1.0L1.0,-1.0L1.5,0.0L1.0,1.0L0.0,1.0Z"/>
      </g>
      <pattern id="grid" width="25" height="25" patternUnits="userSpaceOnUse">
        <path d="M25,0L25,25L0,25" class="stromx-svg-grid"/>
      </pattern>
    </defs>
    <rect width="100%" height="100%" fill="url(#grid)"/>
    {{#each model.operators key="@index" as |op|}}
      {{x-operator-svg model=op inputDragStart="inputDragStart"
        inputDragMove="inputDragMove" inputDragEnd="inputDragEnd"
        inputEnter="inputEnter" inputLeave="inputLeave"
        outputDragStart="outputDragStart" outputDragMove="outputDragMove"
        outputDragEnd="outputDragEnd" outputEnter="outputEnter"
        outputLeave="outputLeave"}}
    {{/each}}

    {{#each model.connections key="@index" as |connection|}}
      {{x-connection-svg model=connection}}
    {{/each}}
    
    {{#if isDraggingConnection}}
      <line x1={{x1}} y1={{y1}} x2={{x2}} y2={{y2}} stroke-width={{strokeWidth}} class="stromx-svg-drag-line"/>
    {{/if}}
  </svg>
</div>




