<div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle stromx-choose-color" data-toggle="dropdown">
    Color<span class="caret"></span>
  </button>
  <ul class="dropdown-menu color-menu" role="menu">
    {{#each color in colors}}
      <li class="stromx-color-item"><a {{action "choose" color.value}}>{{color.name}}</a></li>
    {{/each}}
  </ul>
</div>